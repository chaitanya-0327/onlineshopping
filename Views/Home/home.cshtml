@model IEnumerable<Foodcore.Models.Product>


    <html>
     <body>
         <form method="post">
        <input type="text" name="search"/>
        <input type="submit"  value="search"  />
      


<div class="row">
@if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="col-sm-4">   

                        <div class="card">
                            <img src="~/@item.Images" width=40% height=30%>
                            <div class="container">
                                <h4> @item.Productname</h4>
                                <p ><span class="place">product id</span> : @item.Productid</p>

                                <p ><span class="place">price</span> : @item.Price</p>
                                <p ><span class="place">product description</span> : @item.Productdesc</p>


                            </div>         
                        </div>
                    </div>
                }
            }

 </div>
   </form>
        @ViewBag.a
     </body>
 </html>
 
